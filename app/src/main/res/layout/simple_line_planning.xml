<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >

    <Button
        android:id="@+id/img"
        android:text="@string/enter_token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="10px"
        />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingLeft="10px"
        android:layout_weight="1"
        >

        <TextView android:id="@+id/planningModuleTitle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textSize="10dp"
            android:text="Title Module"
            android:textStyle="bold"
            android:textColor="#000000"
            />

        <TextView android:id="@+id/titleCourse"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textSize="12dp"
            android:text="Title Course"
            android:textStyle="bold"
            android:textColor="#000000"
            />

        <TextView android:id="@+id/start_date"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textSize="9dp"
            android:text="date Start"
            android:textColor="#000000"
            />

        <TextView android:id="@+id/end_date"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textSize="9dp"
            android:text="date End"
            android:textColor="#000000"
            />

    </LinearLayout>
</LinearLayout>